<section>
    <div class="container mt-5">
          <h1>VIEW DOCTORS</h1>
    <div class="row">
            {{#each cardiologys}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 17rem; height:27rem">
  <img class="card-img-top" src="/cardiology-images/{{this._id}}.jpg" alt="Card image cap" style="height: 12rem;">
  <div class="card-body">
    <h5 class="card-title">{{this.Name}}</h5>
    <p class="card-text">{{this.Price}}</p>
    <p class="card-text">{{this.Description}}</p>
    
   <a href="/booking" class=" btn btn-success mt-3" style="width: 100%;"><b>Book Your Slot</b></a>
    
  </div>
</div>

            </div>
            {{/each}}
        </div>
    </div>
        
                
                    
</section>