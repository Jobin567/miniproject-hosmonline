
<section>
    <div class="container mt-5">
        <h1>Ordered Medicines</h1>
        <div class="row">
            
            {{#each products}}
            
            <div class="col-md-3 p-3">
                <div class="card" style="width:15rem;height:10rem">
                    
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <p class="card-text">Medicine ID :({{this.item}})</p>
                        <p class="card-text">Quantity : {{this.quantity}}</p>
                        <p class="card-text">{{this.Category}}</p>
                        
                    </div>

                </div>

            </div>
            
            {{/each}}
        </div>
    </div>
</section>