<section>
    <div class="container mt-3">
        <form action="" id="book-form">
    <div class="" id="book-form">
        <div class="row">
            <div class="col-md-6">
                <h2>Make an Appointment</h2><br>
                <div>
                    <label form="">Name</label>
                    <input class="form-control" type="text" id="name" name="name">
                    <label form="">Address</label>
                    <input class="form-control" type="text" id="address" name="address">
                    <label form="">Pincode</label>
                    <input class="form-control" type="text" id="pincode" name="pincode">
                    
                    <br>
                    <label form="">Department</label>
                    <br>

                      <select id="department">
                       <option value="Oncology">Oncology</option>
                       <option value="Cardiology">Cardiology</option>
                       <option value="Dermantology">Dermantology</option>
                       <option value="Nephrology">Nephrolohy</option>
                        <option value="Neurology">Neurology</option>
                         <option value="Obstetrics">Obstetrics and Gynecology</option>
                       </select>
                       <br>
                    <label form="">Doctors Name</label>
                    <input class="form-control" type="text" id="doctorname" name="doctorname">
                    <label form="">Select Date </label>
                    <input class="form-control" type="date" id="date" name="date">
                    <label form="">Contact Number</label>
                    <input class="form-control" type="text" id="mobile" name="mobile">
                    <label form="">Weight</label>
                    <input class="form-control" type="number" id="weight" name="weight">
                    <label form="">Age</label>
                    <input class="form-control" type="number" id="age" name="age">
                    <input type="text" name="userId" id="" value="{{user._id}}" hidden>
                    <br>
                    <button class="btn btn-primary float-right" type="submit">Submit</button>
                </div>
           </div>
        </div>
    </div>
        
        
    </form>
    </div>
    
</section>

<script>
    $("#book-form").submit((e)=>{
        e.preventDefault()
        $.ajax({
            url:'/booking',
            method:'post',
            data:$('#book-form').serialize(),
            success:(response)=>{
                alert(response)
                if(response.codSuccess){
                    location.href='/book-success'
                }
                
            }
        })
    })
</script>
